{
  "name": "unseenbrowser",
  "version": "0.2.0",
  "description": "Privacy-first browser with Tor mode, container tabs, adblock, and per-site permissions",
  "author": "HNE Technologies",
  "license": "MIT",
  "private": true,
  "repository": { "type": "git", "url": "https://github.com/deadsec07/unseenbrowser.git" },
  "scripts": {
    "start": "electron app",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "cd app && npm i"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.unseen",
    "productName": "Unseen Browser",
    "directories": {
      "app": "app",
      "output": "dist"
    },
    "extraResources": [
      { "from": "vendor/tor", "to": "tor" }
    ],
    "mac": { "category": "public.app-category.utilities", "target": ["dmg","zip"] },
    "win": { "target": ["nsis"], "artifactName": "unseenbrowser-Setup-${version}.exe" },
    "linux": { "target": ["AppImage","deb"], "category": "Utility" },
    "publish": [{ "provider": "github", "owner": "deadsec07", "repo": "unseenbrowser" }]
  }
}
